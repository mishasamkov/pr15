<Page x:Class="timelord_samkov.Pages.Stopwatch"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:timelord_samkov.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Stopwatch">

    <Grid Background="#ffe8e100">
        <Menu Background="#FFE8E100">
            <MenuItem Background="White" Click="StopWatchClick" Header="Секундомер"/>
            <MenuItem Background="White" Click="TimerClick" Header="Таймер"/>
        </Menu>
        <Label x:Name="time" Content="00:00:00" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="299, 95, 299, 242.6" Foreground="White" FontSize="48"/>
        <Button x:Name="start" Click="StartStopwatch" Content="Начать" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="280, 312, 402.4, 72.6" Width="100" Height="25" Background="White"/>
        <Button Content="Интервал" Click="IntervalClick" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="410, 312, 272, 72.6" Width="100" Height="25" Background="White"/>
        <ListView x:Name="interval" Margin="299,181,299,109" Height="120" HorizontalAlignment="Center" VerticalAlignment="Center" Width="184"/>
    </Grid>
</Page>
